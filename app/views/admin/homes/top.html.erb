<h1>注文一覧履歴</h1>
<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <%#= @items.each do |item| %>
      <tr>
        <th><%#= item.id %></th>
        <th><%#= item.name %></th>
        <th><%#= item.price %></th>
        <th><%#= item.on_sale? ? '販売中' : '販売停止中' %></th>
      </tr>
      <%# end %>
    </tbody>
  </table>
