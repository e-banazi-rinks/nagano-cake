<h1>注文一覧履歴</h1>
<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
          <td>
            <%#= link_to admin_order_detail_path(order.id) do %>
              <%=  l order.created_at %>
            <%# end %>
          </td>
          <td><%= order.customer.first_name%><%= order.customer.last_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.order_status_i18n %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
