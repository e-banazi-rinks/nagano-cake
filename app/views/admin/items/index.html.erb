<h1>商品一覧</h1>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <th><%= item.id %></th>
        <th><%= link_to item.name, admin_item_path(item.id) %></th>
        <th><%= item.price %>円</th>
        <th><%= item.genre.name %></th>
        <th><%= item.on_sale? ? '販売中' : '販売停止中' %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
