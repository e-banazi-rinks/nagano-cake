<h1>商品編集</h1>
<%= form_for @item, url: admin_item_path(@item) do |f| %>

  <h4>商品画像</h4>
  <%= f.label :商品画像 %>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>商品名</h4>
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
  
  <h4>商品紹介</h4>
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction %>
  
  <h4>ジャンル</h4>
  <%= f.label :ジャンル名 %>
  
  <h4>税抜価格</h4>
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>
  
  <h4>販売ステータス</h4>
  
  <%= f.submit '変更を保存' %>
<% end %>
