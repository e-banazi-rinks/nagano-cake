<h5 class="bg-secondary" style="width: 130px; margin:30px 0 20px 200px;">注文履歴詳細</h5>
  <div class="container">
    <div class="row">
      <div class="col-10">
<%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
  <table class="table table-borderless">
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= l @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.post_code%><%= @order.address %><%= @order.name %></td>
    </tr>
    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method_i18n%></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= f.select :order_status, Order.order_statuses_i18n.invert %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </td>
    </tr>
  </table>
<% end %>
  </div>
</div>
<div class="row">
  <div class="col-8">
    <table class="table table">
      <thead class="table-active">
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
          <td>製作ステータス</td>
        </tr>
      </thead>
  <% @order_details.each do |order_detail| %>
  
  <% @sum = 0 %>
  <% @sum += order_detail.item.with_tax_price %>
  
  <%= form_with model: order_detail , url: admin_order_order_detail_path(order_detail.id), method: :patch , local: true do |f| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
            <td>
              <%= f.select :maiking_status, OrderDetail.making_statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
        <% end %>
      </table>
    </div>
      <div class="col-2">
        <table class="table table-borderless">
        <tr>
          <td>商品合計</td>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @sum + 800 %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>