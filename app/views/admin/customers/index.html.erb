<h5 class="bg-secondary" style="width: 90px; margin:30px 0 20px 350px;">会員一覧</h5>

<div class="container">
  <div class="col-1"></div>
  <div class="col-10">
    <table class="table table">
      <thead class="table-active">
        <tr>
          <th><b>会員ID</b></th>
          <th><b class="name">氏名</b></th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customers| %>
      <tbody>
        <tr>
          <td><%= customers.id %></td>
          <td>
            <%= link_to admin_customer_path(customers.id,), class:"name" do %>
               <%= "#{customers.last_name} #{customers.first_name}" %>
            <% end %>
          </td>
          <td><%= customers.email %></td>
          <td>
            <% if customers.is_active? %>
              <p class="font-weight-bolder text-success">
                <%= '有効' %>
              </p>
            <% else %>
              <p class="font-weight-bolder text-muted">
                <%= '退会' %>
              </p>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <%= paginate %>
  <div class="col-1"></div>
</div>
