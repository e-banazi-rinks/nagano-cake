<div class="container-fluid">
    <div class="row"><h5>ジャンル一覧・追加</h5></div>
   
    <table>
        <div class="row">
        <thead>
           <tr>
             <th></th>
             <th></th>
             <th></th>
           </tr>
        </thead>
        <tbody>
            <tr>
             <td><p>ジャンル名</p></td>
             <td>
                 <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
                 <%= f.text_field :name %>
             </td>
             <td><%= f.submit '新規登録' %>
                 <% end %>
             </td>
            </tr>
        </tbody>
      </div>
    </table>
      
    <table class="table">
        <thead class="table-active">
            <tr>
              <th></th>
              <th></th>
              <th><h5>ジャンル</h5></th>
              <th></th>
            </tr>
        </thead>
        <tbody>
               <% @genres.each do |genre| %>
               <tr>
               <td></td>
               <td><%= genre.name %></td>
               <td></td>
               <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
                <% end %>
               </td>
            </tr>
        </tbody>
    </table>
</div> 





