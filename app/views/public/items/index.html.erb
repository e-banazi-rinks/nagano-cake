<div class="container-fluid border border-bottom-3">
  <div class="row py-4">
    <div class="col-lg-3 text-center mb-5 mx-auto">
      <div class="genre_search_bar"><%= render 'layouts/search_sidebar' %></div>
    </div>
    <div class="col-lg-9">
        <div class="items-container-title">
          <h1>商品一覧</h1>
          <strong>全<%= @items.count %>件</strong>
        </div>
　    　<div class="d-flex flex-wrap mb-3">
          <% @items.each do |item| %>
          <div class="items mx-3">
            <%= link_to item_path(item.id) do %>  <!-- 商品画像・ない場合は"no_image.jpg" -->
              <% if item.image.attached? %>
                <%= image_tag item.image, size: "180x130" %>
              <% else %>
                <% image_tag "no_image",size: "180x130" %><br>
              <% end %>
            <% end %>
            <p><%= item.name %></p>
            <p><%= (item.price*1.1).floor.to_s(:delimited)%>(税込)</p>
            </div>
          <% end %>
        </div>
        <%= paginate @items %>   <!--  ページネーションを入れる  -->
    </div>
  </div>
</div>
