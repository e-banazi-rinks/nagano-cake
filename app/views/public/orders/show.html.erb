<h4>注文履歴詳細</h4>
<h5>注文情報</h5>
  <%= form_with model: @order, url: order_path, method: :patch, local: true do |f| %>
    <table>
    <tr>
      <td>注文日</td>
      <td><%= l @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.post_code%><%= @order.address %><%= @order.name %></td>
    </tr>
    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= @order.order_status_i18n %>
      </td>
    </tr>
  </table>
  
  <h5>請求情報</h5>
  <table>
    <tr>
      <td>商品合計</td>
      <td><%= @order.total_payment %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td>
        <%=  @order.total_payment + @order.shipping_cost %>
      </td>
    </tr>
  </table>
  <% end %>

<h5>注文内容</h5>
  <table>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
    　<% @cart_items.each do |cart_item| %>
    <tr>
      <th><%= cart_item.item.name %></th>
      <th><%= number_with_delimiter(cart_item.item.with_tax_price) %></th>
      <th><%= cart_item.amount %></th>
      <th><%= number_with_delimiter(cart_item.item.with_tax_price * cart_item.amount) %>円</th>
    </tr>
  </table>
  <% end %>