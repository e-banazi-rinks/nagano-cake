<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3>注文履歴一覧</h3>
        <table class = "table table-bordered" >
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        <% @orders.each do |order| %>
          <tr>
            <td><%= l order.created_at %></td>
            <td><%= order.post_code%></br><%= order.address %></br><%= order.name %></td>
            <td><% order.order_details.name %></td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.order_status_i18n %></td>
            <td><%= link_to "表示する",order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
