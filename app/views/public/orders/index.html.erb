<h1>注文履歴一覧</h1>
<table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <th><%= l order.created_at %></th>
        <th><%= order.post_code%></br><%= order.address %></br><%= order.name %></th>
        <th><% @cart_items.each do |cart_item| %></br>
            <%= cart_item.item.name %></br>
             <% end %></th>
        <th><%= order.total_payment %>円</th>
        <th><%= order.order_status_i18n %></th>
        <th><%= link_to "表示する",order_path(order.id) %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
