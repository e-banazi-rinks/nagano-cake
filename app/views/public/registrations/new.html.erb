<div class="container">
  <div class="row mt-5">
    <div class="col-lg-8">
      <h4>新規会員登録</h4>
      <%= render "public/shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <table>
        <tbody>
          <tr>
            <div class="field">
              <td><%= f.label :名前 %></td>
              <td>
                <%= f.label :（姓） %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              </td>
              <td>
                <%= f.label :（名） %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              </td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :フリガナ %></td>
              <td>
                <%= f.label :（セイ） %>
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              </td>
              <td>
                <%= f.label :（メイ） %>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
              </td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :郵便番号（ハイフンなし） %></td>
              <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :住所 %></td>
              <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :電話番号（ハイフンなし） %></td>
              <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td>
                <%= f.label :パスワード %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :パスワード（確認用） %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </div>
          </tr>
          <tr>
            <div class="actions">
              <td></td>
              <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
            </div>
          </tr>
        </tbody>
      </table>
      <% end %>
      <div class="mt-5">
        <h4>既に登録済みの方</h4>
        <p><%= render "public/shared/links" %>からログインしてください。</p>
      </div>
    </div>
  </div>
</div>