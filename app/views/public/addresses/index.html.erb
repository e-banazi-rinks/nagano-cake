<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 title">
      <h2 class="bg-origin">配送先登録/一覧</h2>
    </div>
    <%= render 'layouts/error', obj: @address %>

    <%= form_with model:@address, local:true do |f| %>
      <div class="form-group">
        <%= f.label :"郵便番号（ハイフンなし）" %>
        <%= f.text_field :post_code, class:"col-lg-4" %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class:"col-lg-5" %>
      </div>

      <div class="form-group">
        <%= f.label :宛名 %>
        <%= f.text_field :name, class:"col-lg-4"  %>
      </div>

      <div class="form-group col-lg-4">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.post_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
   </div>
 </div>
</div>

