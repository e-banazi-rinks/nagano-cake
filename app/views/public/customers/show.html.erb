<div class="container">
  <div class="row">
    <div class="col-lg-12 my-5">
   <h1 class="head-line title_h2">マイページ</h1>
    <div class="text-left d-flex flex-row mb-3">
      <h3>登録情報</h3>
      <span class="mx-3"><%= link_to "編集する", edit_customer_path(@customer), class: 'btn btn-success' %></span> <!-- 緑の編集ボタン（Fontawesome）-->
    </div>

    <table class="table table-bordered ">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
           <td>電話番号</td>
           <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
           <td>メールアドレス</td>
           <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>

　　  <div class="d-flex flex-row mb-3">
        <div>
          <p class="h3">配送先</p>
        </div>
    <div class="mx-2">
      <%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary" %>
    </div>

    <div class="mx-2">
      <p class="h3">注文履歴</p>
    </div>
    <div>
      <%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %>
    </div>
    </div>
    </div>
  </div>
 </div>