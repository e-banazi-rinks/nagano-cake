<h2>マイページ</h2>
<strong>登録情報</strong>
<span></span><%= link_to "編集する", edit_customer_path(@customer) %></span> <!-- 緑の編集ボタン（Fontawesome）-->

<table>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name + @customer.first_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
</table>


<div>
<strong>配送先</strong>
</div>

<div>
<strong>注文履歴</strong>
</div>